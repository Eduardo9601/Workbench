CREATE OR REPLACE VIEW V_DADOS_ORGANOGRAMAS_AVT AS
SELECT
    L.COD_ORGANOGRAMA,
    L.COD_UNIDADE,
    L.DES_UNIDADE,
    L.DATA_INICIO,
    L.DATA_FIM,
    L.COD_REDE_LOCAL,
    L.DES_REDE_LOCAL,
    L.COD_REGIAO,
    L.COD_EMP,
    L.DES_EMPRESA,
    TO_CHAR(L.COD_TIPO) AS COD_TIPO,
    L.DES_TIPO,
    L.EDICAO_COMPLETA
FROM
    V_DADOS_LOJAS_AVT L

UNION ALL

-- Selecionando dados dos Setores
SELECT
    S.COD_ORGANOGRAMA,
    S.SETOR,
    S.NOME_SETOR AS NOME_UNIDADE,
    S.DATA_INICIO,
    S.DATA_FIM,
    S.COD_REDE_LOCAL,
    S.DES_REDE_LOCAL,
    S.COD_REGIAO,
    S.COD_EMP,
    S.DES_EMPRESA,
    S.COD_TIPO,
    S.DES_TIPO,
    S.EDICAO_COMPLETA
FROM
    V_SETORES_ADM_AVT S

