CREATE OR REPLACE VIEW V_DADOS_REGIONAIS_AVT AS
SELECT CT.COD_CONTRATO,
       PF.NOME_PESSOA,
       PF.CPF,
       PF.EMAIL,
       ORG1.EDICAO_ORG,
       ORG2.NOME_ORGANOGRAMA
FROM RHFP0300 CT
INNER JOIN PESSOA_FISICA PF ON CT.COD_FUNC = PF.COD_PESSOA
INNER JOIN RHFP0340 CH ON CT.COD_CONTRATO = CH.COD_CONTRATO AND CH.DATA_FIM = TO_DATE('31/12/2999', 'DD/MM/YYYY')
INNER JOIN RHFP0310 OCT ON CT.COD_CONTRATO = OCT.COD_CONTRATO AND OCT.DATA_FIM = TO_DATE('31/12/2999', 'DD/MM/YYYY')
INNER JOIN RHFP0401 ORG1 ON OCT.COD_ORGANOGRAMA = ORG1.COD_ORGANOGRAMA
INNER JOIN RHFP0400 ORG2 ON ORG1.COD_ORGANOGRAMA = ORG2.COD_ORGANOGRAMA
WHERE CT.DATA_FIM IS NULL
AND CH.COD_CLH = 325

